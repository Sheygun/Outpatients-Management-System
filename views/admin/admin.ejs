   <section class="container">
    <div style="height:110px;"></div>
        <div class="row mx-0 mb-5">

          <div class="col-md-12 mb-5">
            <div>
                <h1 class="h1-responsive font-weight-bold text-center">Welcome Administrator</h1>
                <hr class="hr w-50" style="border:3px solid;">
            </div>
          </div>

          <div class="col-md-3 mb-5">
                <div>
                    <ul class="list-group nav-pills" id="pills-tab" role="tablist">
                            <li class="nav-item active list-group-item">
                                    <a class="nav-link active" id="pills-Profile-tab" data-toggle="pill" href="#pills-Profile" role="tab"
                                    aria-controls="pills-Profile" aria-selected="false">Profile</a>
                                </li>
                                <li class="nav-item list-group-item">
                                <a class="nav-link" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
                                    aria-controls="pills-home" aria-selected="true">Make An Appointment</a>
                                </li>
                                <li class="nav-item list-group-item">
                                <a class="nav-link" id="pills-history-tab" data-toggle="pill" href="#pills-history" role="tab"
                                    aria-controls="pills-history" aria-selected="false">Health History</a>
                                </li>
                                <li class="nav-item list-group-item">
                                    <a class="nav-link" id="pills-Payer-tab" data-toggle="pill" href="#pills-Payer" role="tab"
                                    aria-controls="pills-Payer" aria-selected="false">Payer Coverage</a>
                                </li>
                                <li class="nav-item list-group-item">
                                    <a class="nav-link" id="pills-Registeration-tab" data-toggle="pill" href="#pills-Registeration" role="tab"
                                    aria-controls="pills-Registeration" aria-selected="false">Registeration Number</a>
                                </li>

                    </ul>
                </div>
          </div>
          <div class="col-md-9">
                <div class="tab-content pt-2 pl-1" id="pills-tabContent">
                        <div class="tab-pane fade" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                            <div>
                                <div>
                                    <h1 class="h3-responsive font-weight-bold ml-5">Make An Appointment</h1>
                                </div>
                                    <div class="col-md-8">
                                            <form class="text-center p-3">
                                                        <select class="browser-default custom-select mb-3" style="font-size:18px;">
                                                                <option value="default" selected>Choose Department</option>
                                                                <option value="2">Neurology</option>
                                                                <option value="3">Dentistry</option>
                                                                <option value="4">Cardiology</option>
                                                                <option value="5">Pediatrics</option>
                                                                <option value="6">Pulmonology</option>
                                                                <option value="7">Ophthalmology</option>
                                                                <option value="8">Diagnostics</option>
                                                                <option value="9">Others</option>
                                                            </select>

                                                    <select class="browser-default custom-select mb-3" style="font-size:18px;">
                                                        <option value="default" selected disabled>Choose Doctor</option>
                                                        <option value="1" >Dr Akinwole Micheal</option>
                                                        <option value="2">Dr Olubanji Timothy</option>
                                                        <option value="2">Dr Sola Ninolowo</option>
                                                        <option value="2">Dr Hamzat Kareem</option>
                                                        <option value="2">Dr Abigeal Titi</option>
                                                        <option value="2">Dr Toyin Abraham</option>
                                                    </select>
                                                    <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Health Symptoms">
                                                    <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Registration Number">
                                                    <button class="btn btn-outline-black ">
                                                    <span class="h5 font-weight-bold text-capitalize">Submit</span>
                                                  </button>
                                                </form>
                                    </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-history" role="tabpanel" aria-labelledby="pills-history-tab">
                            <div>
                                    <div>
                                        <h1 class="h3-responsive font-weight-bold ml-5">Health History</h1>
                                    </div>
                                    <div class="table-responsive text-nowrap">
                                            <table class="table">
                                                    <thead class="white-text" style="background: rgb(2, 27, 60)">
                                                        <tr>
                                                        <th scope="col">S/N</th>
                                                        <th scope="col">Symptoms</th>
                                                        <th scope="col">Doctor In Charge</th>
                                                        <th scope="col">Department</th>
                                                        <th scope="col">Dates</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>



                                                    <tr>
                                                        <th scope="row">1</th>
                                                        <td>Headache </td>
                                                        <td>Dr Shola Abigeal </td>
                                                        <td>Dentistry</td>
                                                        <td>27 Oct, 2019 </td>
                                                        <td> </td>
                                                     </tr>


                                                    </tbody>
                                                </table>
                                        </div>

                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-Payer" role="tabpanel" aria-labelledby="pills-Payer-tab">
                                <div>
                                        <div>
                                            <h1 class="h3-responsive font-weight-bold ml-5">Payer Coverage</h1>
                                        </div>
                                        <div class="table-responsive text-nowrap">
                                                <table class="table">
                                                        <thead class="white-text" style="background: rgb(2, 27, 60)">
                                                            <tr>
                                                            <th scope="col">S/N</th>
                                                            <th scope="col">Payments(Naira)</th>
                                                            <th scope="col">Status</th>
                                                            <th scope="col">Dates</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                        <tr>
                                                            <th scope="row">1</th>
                                                            <td>2,500 </td>
                                                            <td>Pending</td>
                                                            <td>27 Oct, 2019</td>
                                                            <td> </td>
                                                         </tr>


                                                        </tbody>
                                                    </table>
                                            </div>

                                </div>
                        </div>

                        <div class="tab-pane fade" id="pills-Registeration" role="tabpanel" aria-labelledby="pills-Registeration-tab">
                                <div>
                                        <div>
                                            <h1 class="h3-responsive font-weight-bold ml-5 mb-3">Registration Number</h1>
                                            <hr class="hr">
                                            <h1 class="h5 ml-5">Hi John Doe Smith, Your Registration Number is <span class="blue-text">2443-1324-2331</span></h1>
                                        </div>
                                </div>
                        </div>

                        <div class="tab-pane fade show active" id="pills-Profile" role="tabpanel" aria-labelledby="pills-Profile-tab">
                                <div>
                                    <div>
                                        <h1 class="h3-responsive font-weight-bold ml-5 mb-4">Registration Profile</h1>
                                    </div>
                                        <div class="col-md-10">
                                                <form class="text-center">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Full Name">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="email" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Email">
                                                        </div>
                                                         <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Phone Number">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Address">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Local Government">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="City">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Nationality">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Date of Birth">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <select class="browser-default custom-select mb-3" style="font-size:18px;">
                                                                        <option value="default" selected disabled>Choose Gender</option>
                                                                        <option value="1" >Male</option>
                                                                        <option value="2">Female</option>
                                                                    </select>
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Occupation">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Blood Group">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="" class="form-control mb-3 py-3" style="font-size:18px;" placeholder="Genotype">
                                                        </div>
                                                        <div class="col-md-6"><select class="browser-default custom-select mb-3" style="font-size:18px;">
                                                                <option value="default" selected disabled>Marital Status</option>
                                                                <option value="1" >Single</option>
                                                                <option value="2">Married</option>
                                                                <option value="2">Divorce</option>
                                                            </select>
                                                         </div>
                                                    </div>


                                                        <button class="btn btn-outline-black ">
                                                        <span class="h5 font-weight-bold text-capitalize">Update</span>
                                                      </button>
                                                    </form>
                                        </div>
                                </div>
                            </div>


                      </div>
          </div>

        </div>
        <div style="height:50px;"></div>
   </section>

