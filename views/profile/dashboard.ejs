<!DOCTYPE html>
<html>

  <% include ../partial/head %>

  <style>
      .hr-light {
        border-top: 3px solid #fff;
        width: 80px;
      }

      h1, h2, h3, h4, h5, h6{
        font-family: Lato;
      }

      @media (max-width: 991px) {
          .editted{
              display: none
          }
      }

      @media (max-width: 550px) {
          .editted{
              display: none
          }

      }
    </style>


</head>

<body>
    <header>
        <!--Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top black">
            <a class="navbar-brand font-weight-bold" href="/">Outpatient MS</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-4"
              aria-controls="navbarSupportedContent-4" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent-4">
              <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                      <a class="nav-link" href="/">Home</a>
                    </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Our Work</a>
                  </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact Us</a>
                </li>

                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-4" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">Profile</a>
                  <div class="dropdown-menu dropdown-menu-right dropdown-info" aria-labelledby="navbarDropdownMenuLink-4">
                    <a class="dropdown-item" href="/dashboard/profile">Profile</a>
                    <a class="dropdown-item" href="/logout">Logout</a>
                  </div>
                </li>
              </ul>
            </div>
          </nav>
          <!--/.Navbar -->
    </header>

   <section class="container">
    <div style="height:110px;"></div>
        <div class="row mx-0 mb-5">

          <div class="col-md-12 mb-5">
            <div>
                <h1 class="h1-responsive font-weight-bold text-center">Welcome <%= user.firstName %> <%= user.lastName %></h1>
                <hr class="hr w-50" style="border:3px solid;">
            </div>
          </div>

          <div class="col-md-3 mb-5">
                <div>
                    <ul class="list-group nav-pills" id="pills-tab" role="tablist">
                            <li class="nav-item active list-group-item">
                                    <a class="nav-link active" id="pills-Profile-tab" data-toggle="pill" href="#pills-Profile" role="tab"
                                    aria-controls="pills-Profile" aria-selected="false">Profile</a>
                                </li>
                                <li class="nav-item list-group-item">
                                <a class="nav-link" href="/dashboard/make-an-appointment" target="_blank">Make An Appointment</a>
                                </li>
                                <li class="nav-item list-group-item">
                                <a class="nav-link" id="pills-history-tab" data-toggle="pill" href="#pills-history" role="tab"
                                    aria-controls="pills-history" aria-selected="false">Health History</a>
                                </li>
                                <li class="nav-item list-group-item">
                                    <a class="nav-link" id="pills-Payer-tab" data-toggle="pill" href="#pills-Payer" role="tab"
                                    aria-controls="pills-Payer" aria-selected="false">Payer Coverage</a>
                                </li>
                                <li class="nav-item list-group-item">
                                    <a class="nav-link" id="pills-Registeration-tab" data-toggle="pill" href="#pills-Registeration" role="tab"
                                    aria-controls="pills-Registeration" aria-selected="false">Registeration Number</a>
                                </li>

                    </ul>
                </div>
          </div>
          <div class="col-md-9">
                <div class="tab-content pt-2 pl-1" id="pills-tabContent">

                        <div class="tab-pane fade" id="pills-history" role="tabpanel" aria-labelledby="pills-history-tab">
                            <div>
                                    <div>
                                        <h1 class="h3-responsive font-weight-bold ml-5">Health History</h1>
                                    </div>
                                    <div class="table-responsive text-nowrap">
                                            <table class="table">
                                                    <thead class="white-text" style="background: rgb(2, 27, 60)">
                                                        <tr>
                                                        <th scope="col">S/N</th>
                                                        <th scope="col">Symptoms</th>
                                                        <th scope="col">Doctor In Charge</th>
                                                        <th scope="col">Department</th>
                                                        <th scope="col">Dates</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                    <% if (appoint.length) { %>
                                                        <% for (let c = 0; c < appoint.length; c++) { %>
                                                            <tr>
                                                                <th scope="row"><%= c+1 %></th>
                                                                <td ><%= appoint[c].health %></td>
                                                                <td><%= appoint[c].doctor %> </td>
                                                                <td><%= appoint[c].department %> </td>
                                                                <td><%= appoint[c].createdDate %> </td>
                                                            </tr>
                                                        <% } %>
                                                    <% } %>

                                                    </tbody>
                                                </table>
                                        </div>

                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-Payer" role="tabpanel" aria-labelledby="pills-Payer-tab">
                                <div>
                                        <div>
                                            <h1 class="h3-responsive font-weight-bold ml-5">Payer Coverage</h1>
                                        </div>
                                        <div class="table-responsive text-nowrap">
                                                <table class="table">
                                                        <thead class="white-text" style="background: rgb(2, 27, 60)">
                                                            <tr>
                                                            <th scope="col">S/N</th>
                                                            <th scope="col">Payments(Naira)</th>
                                                            <th scope="col">Status</th>
                                                            <th scope="col">Dates</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                        <tr>
                                                            <th scope="row">1</th>
                                                            <td>2,500 </td>
                                                            <td>Pending</td>
                                                            <td>27 Oct, 2019</td>
                                                            <td> </td>
                                                         </tr>


                                                        </tbody>
                                                    </table>
                                            </div>

                                </div>
                        </div>

                        <div class="tab-pane fade" id="pills-Registeration" role="tabpanel" aria-labelledby="pills-Registeration-tab">
                                <div>
                                        <div>
                                            <h1 class="h3-responsive font-weight-bold ml-5 mb-3">Registration Number</h1>
                                            <hr class="hr">
                                            <h1 class="h5 ml-5">Hi John Doe Smith, Your Registration Number is <span class="blue-text">2443-1324-2331</span></h1>
                                        </div>
                                </div>
                        </div>

                        <div class="tab-pane fade show active" id="pills-Profile" role="tabpanel" aria-labelledby="pills-Profile-tab">
                                <div>
                                        <div class="clearfix"></div>
                                        <% if (messages.updateProfile) { %>
                                            <div class="col-md-8 mx-auto">
                                                <div class="alert alert-success alert-dismissable p-2 mt-2" id="notify">
                                                    <h6 id="status" class="h5 text-center font-weight-bold"><%= messages.updateProfile %></h6>
                                                </div>
                                            </div>
                                        <% } %>
                                        <div class="clearfix"></div>

                                    <div>
                                        <h1 class="h3-responsive font-weight-bold ml-5 mb-4">Registration Profile</h1>
                                    </div>

                                        <div class="col-md-10">
                                                <form class="text-center" action="/dashboard" method="POST">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                                <input type="text" id="firstName" name="firstName" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.firstName %>" placeholder="First Name">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="lastName" name="lastName" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.lastName %>"  placeholder="Last Name">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="email" id="email" name="email" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.email %>"  placeholder="Email">
                                                        </div>
                                                         <div class="col-md-6">
                                                                <input type="text" id="phone" name="phone" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.phone %>"  placeholder="Phone Number">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="address" name="address" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.address %>"  placeholder="Address">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="lg" name="lg" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.lg %>"  placeholder="Local Government">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="town" name="town" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.town %>"  placeholder="City">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="country" name="country" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.country %>"  placeholder="Nationality">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="dob" name="dob" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.dob %>"  placeholder="Date of Birth">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <select class="browser-default custom-select mb-3" id="gender" name="gender" style="font-size:18px;">
                                                                        <option value="default" selected disabled>Choose Gender</option>
                                                                        <option value="Male" >Male</option>
                                                                        <option value="Female">Female</option>
                                                                        <option value="Others">Others</option>
                                                                    </select>
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="occupation" name="occupation" class="form-control mb-3 py-3"  style="font-size:18px;" value="<%= user.occupation %>" placeholder="Occupation">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="bloodGroup" name="bloodGroup" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.bloodGroup %>" placeholder="Blood Group">
                                                        </div>
                                                        <div class="col-md-6">
                                                                <input type="text" id="genotype" name="genotype" class="form-control mb-3 py-3" style="font-size:18px;" value="<%= user.genotype %>" placeholder="Genotype">
                                                        </div>
                                                        <div class="col-md-6"><select class="browser-default custom-select mb-3" id="marital" name="marital" style="font-size:18px;">
                                                                <option value="default" selected disabled>Marital Status</option>
                                                                <option value="Single" >Single</option>
                                                                <option value="Married">Married</option>
                                                                <option value="Divorce">Divorce</option>
                                                            </select>
                                                         </div>
                                                    </div>


                                                        <button class="btn btn-outline-black ">
                                                        <span class="h5 font-weight-bold text-capitalize">Update</span>
                                                      </button>
                                                    </form>
                                        </div>
                                </div>
                            </div>


                      </div>
          </div>

        </div>
        <div style="height:50px;"></div>
   </section>

  <% include ../partial/footer %>
</body>
 <% include ../partial/scripts %>
</html>